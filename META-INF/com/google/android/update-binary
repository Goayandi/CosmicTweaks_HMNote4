#!/sbin/sh
# AnyKernel2 Backend
# osm0sis @ xda-developers
# Modified by CosmicDan where noted
#

OUTFD=/proc/self/fd/$2;
ZIP="$3";
DIR=`dirname "$ZIP"`;

ui_print() {
  until [ ! "$1" ]; do
    echo -e "ui_print $1\nui_print" > $OUTFD;
    shift;
  done;
}
show_progress() { echo "progress $1 $2" > $OUTFD; }
set_perm_recursive() {
  dirs=$(echo $* | $bb awk '{ print substr($0, index($0,$5)) }');
  for i in $dirs; do
    chown -R $1.$2 $i; chown -R $1:$2 $i;
    find "$i" -type d -exec chmod $3 {} +;
    find "$i" -type f -exec chmod $4 {} +;
  done;
}
file_getprop() { grep "^$2" "$1" | cut -d= -f2; }
getprop() { test -e /sbin/getprop && /sbin/getprop $1 || file_getprop /default.prop $1; }
abort() { ui_print "$*"; umount /system; umount /data; exit 1; }

show_progress 1.34 4;
ui_print " ";
mkdir -p /tmp/anykernel/bin;
cd /tmp/anykernel;
# CosmicDan - exclude system
unzip -o "$ZIP" -x "system/*";
if [ $? != 0 -o -z "$(ls /tmp/anykernel/tools)" ]; then
  abort "Unzip failed. Aborting...";
fi;
chmod -R 755 /tmp/anykernel/tools /tmp/anykernel/bin;
bb=/tmp/anykernel/tools/busybox;

ui_print "$(file_getprop /tmp/anykernel/anykernel.sh kernel.string)";
ui_print "By CosmicDan";
ui_print " ";
ui_print "Powered by AnyKernel2 by osm0sis @ xda-developers";
ui_print " ";
# CosmicDan - we are making /system mods later
mount /system;
mount /data;
# Failsafe for busy filesystems
mount -o remount,rw /system;
mount -o remount,rw /data;

if [ "$(file_getprop /tmp/anykernel/anykernel.sh do.devicecheck)" == 1 ]; then
  ui_print "[#] Checking device...";
  for i in 1 2 3 4 5; do
    testname="$(file_getprop /tmp/anykernel/anykernel.sh device$i)";
    if [ "$(getprop ro.product.device)" == "$testname" -o "$(getprop ro.build.product)" == "$testname" ]; then
      ui_print "    [i] Matched '$testname' OK";
      match=1;
      break;
    fi;
  done;
  ui_print " ";
  if [ "$match" != 1 ]; then
    abort "[!] Unsupported device. Aborting...";
  fi;
fi;

if [ "$(file_getprop /tmp/anykernel/anykernel.sh do.initd)" == 1 ]; then
  ui_print "[#] Creating init.d...";
  ui_print " ";
  mkdir /system/etc/init.d;
  set_perm_recursive 0 0 0755 0755 /system/etc/init.d;
fi;

for i in $($bb --list); do
  $bb ln -s $bb /tmp/anykernel/bin/$i;
done;
if [ $? != 0 -o -z "$(ls /tmp/anykernel/bin)" ]; then
  abort "[!] Recovery busybox setup failed. Aborting...";
fi;
PATH="/tmp/anykernel/bin:$PATH" $bb ash /tmp/anykernel/anykernel.sh $2;
if [ $? != "0" ]; then
  abort;
fi;

if [ "$(file_getprop /tmp/anykernel/anykernel.sh do.modules)" == 1 ]; then
  ui_print " ";
  ui_print "[#] Pushing kernel modules to system...";
  #mount -o remount,rw /system;
  cp -rf /tmp/anykernel/modules/* /system/lib/modules/;
  set_perm_recursive 0 0 0755 0644 /system/lib/modules;
  #mount -o remount,ro /system;
fi;

ui_print " ";
ui_print "[#] Extracting new files to /system...";
unzip -o "$ZIP" "system/*" -d "/";
ui_print "    [#] Setting permissions...";
busybox find /system/app/ -type d -exec chmod 755 {} \;
busybox find /system/app/ -type f -exec chmod 644 {} \;
chmod 755 /system/etc/init.d
busybox find /system/etc/init.d/ -type f -exec chmod 755 {} \;
chmod 755 /system/etc/preferred-apps
busybox find /system/etc/preferred-apps -type f -exec chmod 644 {} \;
chmod 755 /system/etc/sysconfig
busybox find /system/etc/sysconfig -type f -exec chmod 644 {} \;
busybox find /system/framework/ -type f -exec chmod 644 {} \;
busybox find /system/priv-app/ -type d -exec chmod 755 {} \;
busybox find /system/priv-app/ -type f -exec chmod 644 {} \;
busybox find /system/xbin/ -type f -exec chmod 755 {} \;

ui_print " ";
ui_print "[i] Busybox installer thanks to YashdSaraf@XDA...";
PATH="/tmp/anykernel/bin:$PATH" $bb ash /tmp/anykernel/busybox_installer.sh $2 $3;

if [ "$(file_getprop /tmp/anykernel/anykernel.sh do.cleanup)" == 1 ]; then
  ui_print " ";
  ui_print "[#] Cleaning up...";
  rm -rf /tmp/anykernel;
fi;

umount /system;
umount /data;
ui_print " ";
ui_print "Done!";

